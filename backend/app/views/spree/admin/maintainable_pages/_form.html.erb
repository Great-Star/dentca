<div data-hook="admin_inside_drop_down_form" class="form-group row">
    <div class="col-xs-12 col-md-6">
        <%= f.field_container :name, class: ['form-group'] do %>
            <%= f.label :name, Spree.t(:name) %> <span class="required">*</span>
            <%= f.text_field :name, class: 'form-control' %>
            <%= f.error_message_on :name, class: 'error-message' %>
        <% end %>
    </div>
    <div class="col-xs-12 col-md-6">
        <%= f.field_container :link, class: ['form-group'] do %>
            <%= f.label :link, Spree.t(:link) %>
            <%= f.text_field :link, class: 'form-control' %>
            <%= f.error_message_on :link, class: 'error-message' %>
        <% end %>
    </div>
    <div class="col-xs-12 col-md-12">
        <%= f.field_container :content, class: ['form-group'] do %>
            <%= f.label :content, Spree.t(:content) %>
            <%= f.text_area :content, class: 'form-control', id: 'maintainable-page-content' %>
            <%= f.error_message_on :content, class: 'error-message' %>
        <% end %>
    </div>
</div>
