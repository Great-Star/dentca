<div class="row">

  <div data-hook="address_wrapper" class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1 class="panel-title">
          <%= Spree.t(:address) %>
        </h1>
      </div>

      <div class="panel-body">
        <%= f.fields_for :address, (@center_application.address || Spree::Address.default) do |address_form| %>
            <% address_form.object ||= Spree::Address.new(country: Spree::Country.new) %>
            <%= render :partial => 'spree/admin/shared/address_form', :locals => { :f => address_form, :type => "center" } %>
        <% end %>
      </div>

    </div>
  </div>

</div>
