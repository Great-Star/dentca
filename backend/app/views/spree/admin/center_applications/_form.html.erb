<div class="row">

  <div data-hook="admin_center_application_form" class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1 class="panel-title">
          <%= Spree.t(:application_details) %>
        </h1>
      </div>

      <div class="panel-body">

        <div class="row">
          <div class="col-md-6">
            <%= f.field_container :office_name, class: ['form-group'] do %>
                <%= f.label :office_name, Spree.t(:office_name) %> <span class="required">*</span>
                <%= f.text_field :office_name, :class => 'form-control' %>
                <%= f.error_message_on :office_name %>
            <% end %>
          </div>

          <div class="col-md-6">
            <%= f.field_container :head_doctor, class: ['form-group'] do %>
                <%= f.label :head_doctor, Spree.t(:head_doctor) %> <span class="required">*</span>
                <%= f.text_field :head_doctor, :class => 'form-control' %>
                <%= f.error_message_on :head_doctor %>
            <% end %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <%= f.field_container :email, class: ['form-group'] do %>
                <%= f.label :email, Spree.t(:email) %> <span class="required">*</span>
                <%= f.text_field :email, :class => 'form-control' %>
                <%= f.error_message_on :email %>
            <% end %>
          </div>

          <div class="col-md-6">
            <%= f.field_container :website, class: ['form-group'] do %>
                <%= f.label :website, Spree.t(:website) %>
                <%= f.text_field :website, :class => 'form-control' %>
                <%= f.error_message_on :website %>
            <% end %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <%= f.field_container :num_of_doctors, class: ['form-group'] do %>
                <%= f.label :num_of_doctors, Spree.t(:num_of_doctors) %> <span class="required">*</span>
                <%= f.text_field :num_of_doctors, :class => 'form-control' %>
                <%= f.error_message_on :num_of_doctors %>
            <% end %>
          </div>

          <div class="col-md-6">
            <%= f.field_container :num_of_staff, class: ['form-group'] do %>
                <%= f.label :num_of_staff, Spree.t(:num_of_staff) %> <span class="required">*</span>
                <%= f.text_field :num_of_staff, :class => 'form-control' %>
                <%= f.error_message_on :num_of_staff %>
            <% end %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <%= f.field_container :college, class: ['form-group'] do %>
                <%= f.label :college, Spree.t(:college) %> <span class="required">*</span>
                <%= f.text_field :college, :class => 'form-control' %>
                <%= f.error_message_on :college %>
            <% end %>
          </div>

          <div class="col-md-6">
            <%= f.field_container :degree, class: ['form-group'] do %>
                <%= f.label :degree, Spree.t(:degree) %> <span class="required">*</span>
                <%= f.text_field :degree, :class => 'form-control' %>
                <%= f.error_message_on :degree %>
            <% end %>
          </div>
        </div>

      </div>

    </div>
  </div>

</div>
