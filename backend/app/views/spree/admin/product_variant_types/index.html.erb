<%= render partial: 'spree/admin/shared/product_tabs', locals: {current: :product_variant_types} %>

<% if @product.empty_option_values? %>
  <% if can?(:modify, Spree::ProductVariantType) %>
    <p class='first_add_option_types no-objects-found' data-hook="first_add_option_types">
      <%= Spree.t(:to_add_variants_you_must_first_define) %>
      <%= link_to(Spree.t(:option_types), spree.admin_product_url(@product)) %>
      <% if can?(:display, Spree::OptionType) && can?([:create, :display], Spree::OptionValue) %>
        <%= Spree.t(:and) %>
        <%= link_to Spree.t(:option_values), spree.admin_option_types_url %>
      <% end %>
    </p>
  <% end %>
<% else %>
<% end %>

<% if @product_variant_types.any? %>
  <table class="table sortable" >
    <thead data-hook="variants_header">
      <tr>
        <th><%= Spree.t(:name) %></th>
        <th><%= Spree.t(:presenatation) %></th>
        <th class="actions"></th>
      </tr>
    </thead>
    <tbody>
    <% @product_variant_types.each do |product_variant_type| %>
      <tr id="<%= spree_dom_id product_variant_type %>" data-hook="product_variant_type_row">
        <td><%= product_variant_type.name %></td>
        <td><%= product_variant_type.presentation %></td>
        <td class="actions actions-2 text-right">
          <%= link_to_edit(product_variant_type, no_text: true) if can?(:edit, product_variant_type) %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>

<% end %>